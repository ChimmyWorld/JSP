	<script>
		let userpw = document.getElementsByName('userpw');
		let msg = document.querySelector('.msg');
		
		if (userpw[0].value == userpw[1].value){
			msg.innerHTML = '패스워드 일치';
		}
		else{
			msg.innerHTML = '패스워드가 일치하지 않습니다';
		}
	</script>
