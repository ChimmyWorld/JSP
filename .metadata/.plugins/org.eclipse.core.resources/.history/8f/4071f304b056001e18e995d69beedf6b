	<%
		AccountVO user = (AccountVO)session.getAttribute("user");
		
		String login = "logout";
		String myPage = "myPage";
		
		if (user == null) {
			user = new AccountVO();
			user.setNick("현재 로그인 중이 아닙니다.");
			
			login = "login";
			myPage ="";
		}
	%>
	
	<h1>Quiz02</h1>
	
	<ul class="menu">
		<li><a href="login.jsp">로그인</a></li>
